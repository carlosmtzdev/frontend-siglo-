:root {
  --max-width: 1024px;
  --color-primary: #B62E78;
  --color-secondary: #5D3EFD;
  --color-black: #333333;
  --color-grey: #CDCDCD;
  --font-primary: 'Poppins', sans-serif;
  --font-title: 'K2D', sans-serif;

}


*
  padding 0
  margin 0

body
  background white
  font-family: var(--font-primary)
  

img
  max-width 100%
  display block
  height auto

.container
  width 90%
  max-width var(--max-width)
  margin-left auto
  margin-right auto

.cta
  background-color var(--color-primary)
  display inline-block
  padding 0.5rem 3rem
  box-shadow 0 5px 33px 0 #b62e78
  
  &__link
    color white
    text-decoration none

.header
  position absolute
  height 50px
  width 100%
  
.logo
  padding 5px 0
  img
    height 50px
    width auto

.banner
  position relative
  overflow hidden
  padding 5rem 2rem
  height 90vh
  display flex
  
  &::before
  &::after
    content ''
    position absolute
    z-index -1
    
  &::before
    top 0
    left 0
    width 50%
    height 100%
    // background-image url(images/dot.svg)

  &::after
    top 0
    left 50%
    width 50%
    height 100%
    background-color var(--color-primary)

  &__container
    display flex
    align-items center

  &__content
    width 40%
    position relative
    z-index 2
  
  &__image
    width 70%
    position relative
    z-index 1
    left -5%
    box-shadow 0px 21px 64px -15px rgb(0 0 0 33%)
    
    img
      display block
      width 100%
      height auto
  
  &__title
    font-size 4rem
    font-weight bolder
    color var(--color-primary)
    
    
  &__description
    margin-top 1rem
    

  &__cta
    margin-top 2rem



.about
  padding 6rem 0
  
  &__container
    position relative
    
  &__image
    position relative
    left 30%
  
  &__content
    position absolute
    bottom 0
    left 0
    width 50%
    background-color white
    padding 1rem
    
  &__title
    font-size 4rem
    font-weight bolder
    color var(--color-secondary)

.contact
  padding 4rem 0
  background-color var(--color-grey)
  position relative
  &::before
    content ''
    display block
    position absolute
    height 100px
    background-color white
    top 0
    left 0
    width 100%
    z-index -1
  
  &__container
    display flex
    
  &__content
  &__form
    width 50%
    
  &__title
    font-size 4rem
    font-weight bolder
    color var(--color-primary)
    
  &__form
    box-shadow 0px 21px 64px -15px rgb(0 0 0 33%)
    padding 1.5rem
    background-color white
    
    input[type="text"]
    input[type="tel"]
    input[type="email"]
    textarea
      font-family: var(--font-primary)
      font-size 1rem
      width 100%
      display block
      border none
      border-bottom 2px solid var(--color-grey)
      margin-bottom 2rem
      padding 5px
      
    input[type="submit"]
      font-family: var(--font-primary)
      background-color var(--color-primary)
      display inline-block
      padding 1rem 4rem
      box-shadow 0 5px 33px 0 #b62e78
      width auto
      border none
      position relative
      top 3rem
      left 60%
      color white
      font-size 1rem

.footer
  background var(--color-primary)
  padding 2rem

  &__logo
    display flex
    justify-content center    
    img
      height 80px
      width auto
  

.nav-footer
  padding 2rem 0
  &__list
    display flex  
    list-style none
    justify-content space-around
    
  &__item
    //
      
  &__link
    text-transform uppercase
    color white
    text-decoration none